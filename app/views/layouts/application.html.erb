<!DOCTYPE html>
<html>
<head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr_only">Toggle Navigation</span>
                    <span class="icon_bar"></span>
                    <span class="icon_bar"></span>
                </button>
                <h1><%= link_to root_path do %>
                    <%= image_tag('logo.png', width: '100', height: '100') %>
                    SeraQChoveu?
                    <% end %>
                </h1>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar navbar-right">
                    <% if current_user%>
                    <li>Logado como: <%= current_user.name%> - <%= image_tag(current_user.image, width: '50', height: '50', class: 'image-circle')%></li>
                    <%= link_to "Sair", destroy_user_session_path, method: :delete %>

                    <% else %>
                    <li><%= link_to "users/auth/facebook" do %> <%= image_tag('facebook.png', width: '40', height: '40', class: 'image-circle')%><%end%></li>
                    <li><%= link_to "auth/twitter" do %> <%= image_tag('twitter.png', width: '40', height: '40', class: 'image-circle')%><%end%></li>
                    <%end%>
                </ul>
            </div>
        </div>
    </nav>
    <% if current_user %>
    <div class="alert alert-info">
        Conectado
    </div>
    <div class="text-center">
        <h1>Bem vindo, <%= current_user.name%></h1>
        <%= image_tag (current_user.image)%>
    </div>
    <% else %>
        <div class="alert alert-danger" role="alert">
            Desconectado
        </div>
    <% end %>
</body>
<%= yield %>
</body>
</html>
