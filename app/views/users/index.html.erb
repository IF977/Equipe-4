<p id="notice"><%= notice %></p>

<h1>Lista de Usuários</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>E-mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>| <%= user.name %> |</td>
        <td>| <%= user.email %> |</td>
        <td>| <%= link_to 'Mostrar Usuário', user %> |</td>
        <td>| <%= link_to 'Editar Usuário', edit_user_path(user) %> |</td>
        <td>| <%= link_to 'Remover Usuário', user, method: :delete, data: { confirm: 'Você tem certeza?' } %> ||</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
